								<a class="dropdown-item" href="{{path('app_headset')}}">Écouteurs et casques</a>
								<a class="dropdown-item" href="{{path('app_support')}}">Supports pour voiture</a>
								<a class="dropdown-item" href="{{path('app_other')}}">Autres accessoires</a>
							</div>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Marques</a>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="{{path('app_tel_apple')}}">Apple</a>
								<a class="dropdown-item" href="{{path('app_tel_samsung')}}">Samsung</a>
								<a class="dropdown-item" href="{{path('app_tel_google')}}">Google</a>
								<a class="dropdown-item" href="{{path('app_tel_xiaomi')}}">Xiaomi</a>
								<a class="dropdown-item" href="{{path('app_tel_oneplus')}}">One PLus</a>
							</div>
						</li>
						{# <li class="nav-item">
							<a class="nav-link" href="{{path('app_about')}}">About</a>
						</li>
						#}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_contact')}}">Contact</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_favori')}}">
									<i class="bi bi-bag-heart"></i>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_panier')}}">
									<i class="bi bi-cart"></i>
								</a>
							</li>
						{% endif %}
					</div>
				</li>
			</ul>
			<form class="d-flex">
				<input class="form-control me-sm-2" type="search" placeholder="Search">
				<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
			</form>
			<ul class="navbar-nav me-auto">
				{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
					<li class="nav-item">
						<a class="nav-link" href="{{path('app_login')}}">Se connecter
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{path('app_register')}}">S'inscrire
						</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a class="nav-link" href="{{path('app_logout')}}">
							{{app.user.email}}
							<i class="bi bi-x-circle-fill"></i>
						</a>
					</li>
				{% endif %}

			</div>
