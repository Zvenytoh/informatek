{% extends 'base.html.twig' %}
{% block title %}{{parent()}}Recherche{% endblock %}
{% block body %}
 <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> Résultat de "{{query}}" </h1>
 </h1>
	<div class="row justify-content-center pt-5">
		<div>
			<div class"card-group g-4 pt-4">
				<div class="row row-cols-md-auto g-4 pt-4">
					{% for p in produits %}
							<div class="col">
								<div class="card" style="width: 18rem; border: none;">
									<a href="{{path('app_produit', {'id':p.id})}}"><img class="card-img-top" src="img/{{p.image}}" alt="Card image cap">
									<div class="card-body">
										<h5 class="card-title">{{p.libelle}}</h5>
										<p class="card-text">{{p.prix}}€</p>
										<div class="row row-cols-md-auto">
											<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Ajouter au panier</button>
											<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
												<div class="offcanvas-header">
													<h5 id="offcanvasRightLabel">
														<Offcanvas right>C'est tout bon !</h5>
														<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
													</div>
													<div class="offcanvas-body">
														Votre produit a été ajouté au panier
													</div>
												</div>	
											</div>
										</div>
									</div>
								</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
{% endblock %}